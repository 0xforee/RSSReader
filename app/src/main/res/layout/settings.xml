<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/setting_margin_all"
    android:layout_marginLeft="@dimen/setting_margin_all"
    android:layout_marginStart="@dimen/setting_margin_all"
    android:layout_marginBottom="@dimen/setting_margin_all"
    android:layout_marginEnd="@dimen/setting_margin_all">
    <TextView
        android:id="@+id/tv_account"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_account"
        android:textColor="@color/item_title_color"
        android:textSize="@dimen/item_title_size" />
    <RelativeLayout
        android:id="@+id/account_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin_top"
        android:layout_below="@id/tv_account">

        <TextView
            android:id="@+id/tv_editaccount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_editaccount"
            android:textColor="@color/item_option_color"
            android:textSize="@dimen/item_option_size" />

        <TextView
            android:id="@+id/tv_accountname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_editaccount"
            android:text="@string/tv_accountname"
            android:textColor="@color/item_description_color"
            android:textSize="@dimen/item_description_size" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_logout"
        android:layout_marginTop="@dimen/item_margin_top"
        android:textColor="@color/item_option_color"
        android:layout_below="@id/account_description"
        android:textSize="@dimen/item_option_size" />
    <TextView
        android:id="@+id/tv_general"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_logout"
        android:layout_marginTop="@dimen/item_margin_top"
        android:text="@string/tv_general"
        android:textColor="@color/item_title_color"
        android:textSize="@dimen/item_title_size" />

    <RelativeLayout
        android:id="@+id/nightmode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin_top"
        android:layout_below="@id/tv_general">

        <TextView
            android:id="@+id/tv_darktheme"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_darktheme"
            android:textColor="@color/item_option_color"
            android:textSize="@dimen/item_option_size" />

        <TextView
            android:id="@+id/tv_dark_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_darktheme"
            android:text="@string/tv_dark_description"
            android:textColor="@color/item_description_color"
            android:textSize="@dimen/item_description_size" />

        <CheckBox
            android:id="@+id/cb_darktheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/checkbox_margin_right"
            android:layout_marginEnd="@dimen/checkbox_margin_right"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_offline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nightmode"
        android:layout_marginTop="@dimen/item_margin_top"
        android:text="@string/tv_offline"
        android:textColor="@color/item_title_color"
        android:textSize="@dimen/item_title_size" />
    <RelativeLayout
        android:id="@+id/downloadcache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin_top"
        android:layout_below="@id/tv_offline">

        <TextView
            android:id="@+id/tv_downloadonwifi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_downloadonwifi"
            android:layout_centerVertical="true"
            android:textColor="@color/item_option_color"
            android:textSize="@dimen/item_option_size" />

        <CheckBox
            android:id="@+id/cb_downloadonwifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/checkbox_margin_right"
            android:layout_marginEnd="@dimen/checkbox_margin_right"/>
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/cleancache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin_top"
            android:layout_below="@id/downloadcache">
        <TextView
            android:id="@+id/tv_clean"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_clean"
            android:textColor="@color/item_option_color"
            android:textSize="@dimen/item_option_size" />

        <TextView
            android:id="@+id/tv_clean_des"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_clean"
            android:text="@string/tv_clean_des"
            android:textColor="@color/item_description_color"
            android:textSize="@dimen/item_description_size" />

        <CheckBox
            android:id="@+id/cb_cleancache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/checkbox_margin_right"
            android:layout_marginEnd="@dimen/checkbox_margin_right"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_about"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cleancache"
        android:layout_marginTop="@dimen/item_margin_top"
        android:text="@string/tv_about"
        android:textColor="@color/item_title_color"
        android:textSize="@dimen/item_title_size" />

    <TextView
        android:id="@+id/tv_contactme"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_about"
        android:layout_marginTop="@dimen/item_margin_top"
        android:text="@string/tv_contactme"
        android:textColor="@color/item_option_color"
        android:textSize="@dimen/item_option_size" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_contactme"
        android:text="@string/tv_email"
        android:textColor="@color/item_description_color"
        android:textSize="@dimen/item_description_size" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_email"
        android:layout_marginTop="@dimen/item_margin_top"
        android:text="@string/tv_version"
        android:textColor="@color/item_title_color"
        android:textSize="@dimen/item_title_size" />

    <TextView
        android:id="@+id/tv_versionnumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_version"
        android:layout_marginTop="@dimen/item_margin_top"
        android:text="@string/tv_versionnumber"
        android:textColor="@color/item_option_color"
        android:textSize="@dimen/item_option_size" />

    <TextView
        android:id="@+id/enjoy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_versionnumber"
        android:layout_marginBottom="@dimen/setting_margin_all"
        android:text="@string/tv_enjoy"
        android:textColor="@color/item_description_color"
        android:textSize="@dimen/item_description_size" />
</RelativeLayout>
</ScrollView>