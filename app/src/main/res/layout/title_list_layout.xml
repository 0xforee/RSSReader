<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?attr/myBackground">

    <LinearLayout
        android:id="@+id/text_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dip"
        android:layout_marginStart="15dip"
        android:layout_marginTop="7dip"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/title_image"
        android:layout_toStartOf="@+id/title_image">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/myTextColor"
            android:layout_marginRight="15dip"
            android:layout_marginEnd="15dip"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rssfeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dip"
                android:text="好奇心日报"
                android:textColor="?attr/myTextColor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dip"
                android:text="2015年02月08日"
                android:textColor="?attr/myTextColor"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:visibility="invisible"
        android:id="@+id/title_image"
        android:layout_width="70dp"
        android:contentDescription="@string/title_image"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/text_all" />
</RelativeLayout>