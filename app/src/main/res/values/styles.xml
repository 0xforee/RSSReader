<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="myLoadTextColor">@color/whitesmoke</item>
        <item name="myTextColor">@color/black</item>
        <item name="myBackground">@color/white</item>
        <item name="mylistdivider">@color/white</item>
        <!-- menu textColor -->
        <item name="android:textColor">@color/black</item>
        <!-- menu overflow view style -->
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>

        <!--support library compatibility -->
        <item name="dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="actionBarDivider">@null</item>
    </style>

    <!-- overFlowMenu background -->
    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:background">@color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="DayTheme" parent="@style/BaseTheme">
    <item name="myActionbarBackground">@color/aquamarine_my_actionbar_background</item>
        <item name="primaryBackground">@color/aquamarine_primary</item>
        <item name="primary_pressedBackground">@color/aquamarine_primary_pressed</item>
        <item name="rippleBackground">@color/aquamarine_ripple</item>
        <item name="android:actionBarStyle">@style/MyactionBar</item>

        <!--support library compatibility -->
        <item name="actionBarStyle">@style/MyactionBar</item>
    </style>

    <style name="MyactionBar" parent="Widget.AppCompat.Light.ActionMode.Inverse">
        <item name="android:background">@color/aquamarine_my_actionbar_background</item>
        <!--support library compatibility -->
        <item name="background">@color/aquamarine_my_actionbar_background</item>
    </style>

